<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="cdh511Hadoop" class="org.pentaho.hadoop.shim.cdh511.HadoopShim" scope="singleton"/>
  <service ref="cdh511Hadoop" interface="org.pentaho.hadoop.shim.spi.HadoopShim">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
    </service-properties>
  </service>

  <bean id="hadoopFileSystem" class="com.pentaho.big.data.bundles.impl.shim.hdfs.HadoopFileSystemFactoryImpl">
    <argument ref="cdh511Hadoop"/>
  </bean>

  <service ref="hadoopFileSystem" interface="org.pentaho.bigdata.api.hdfs.HadoopFileSystemFactory"/>

  <bean id="cdh511SqoopShim" class="org.pentaho.hadoop.shim.common.sqoop.CommonSqoopShim">
    <property name="bundleContext" ref="blueprintBundleContext" />
  </bean>

  <service ref="cdh511SqoopShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>

  <bean id="cdh11SqoopServiceFactory" class="org.pentaho.big.data.impl.shim.sqoop.SqoopServiceFactoryImpl">
    <argument ref="cdh511Hadoop"/>
    <argument ref="cdh511SqoopShim"/>
  </bean>

  <service ref="cdh11SqoopServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>


  <bean id="cdh511PigShim" class="org.pentaho.hadoop.shim.common.pig.PigShimImpl">
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <service ref="cdh511PigShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="cdh11PigServiceFactory" class="org.pentaho.big.data.impl.shim.pig.PigServiceFactoryImpl">
    <argument ref="cdh511Hadoop"/>
    <argument ref="cdh511PigShim"/>
  </bean>

  <service ref="cdh11PigServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="cdh11MapReduceServiceFactory" class="org.pentaho.big.data.impl.shim.mapreduce.MapReduceServiceFactoryImpl">
    <argument ref="cdh511Hadoop"/>
    <argument ref="executorService"/>
    <argument ref="transformationVisitorList"/>
  </bean>
  <reference id="executorService" interface="java.util.concurrent.ExecutorService"/>

  <service ref="cdh11MapReduceServiceFactory" interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">cdh511</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">mapreduce</value>
      </entry>
    </service-properties>
  </service>
  <reference-list id="transformationVisitorList" interface="org.pentaho.bigdata.api.mapreduce.TransformationVisitorService"
                  availability="optional"/>
  <!--<reference id="cdh511HadoopConfiguration" interface="org.pentaho.hadoop.shim.api.HadoopConfigurationInterface"/>-->

</blueprint>